@page
@model WebApp.Pages.Transformers.DeleteModel
@{
    ViewData["Title"] = "Delete Transformer";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <h3>
            Are you sure you want to delete the bus @Model.Transformer.Name ?
        </h3>
        <form method="post">
            <hr />
            <input asp-for="DelTransformerCmd.Id" type="hidden" />
            <button type="submit" class="btn btn-danger mb-1">Delete</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

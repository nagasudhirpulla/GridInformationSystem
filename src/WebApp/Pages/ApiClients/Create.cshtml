@page
@model WebApp.Pages.ApiClients.CreateModel
@{
    ViewData["Title"] = "Create New ApiClient";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="NewApiClient.Name" class="form-label"></label>
                <input asp-for="NewApiClient.Name" class="form-control" />
                <span asp-validation-for="NewApiClient.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewApiClient.Key" class="form-label"></label>
                <input asp-for="NewApiClient.Key" class="form-control" />
                <span asp-validation-for="NewApiClient.Key" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewApiClient.ApiRoleIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.ApiRoleId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="NewApiClient.ApiRoleIds" type="hidden" />
                <span asp-validation-for="NewApiClient.ApiRoleIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Create</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
